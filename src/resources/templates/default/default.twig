<!doctype html>
<html class="no-js">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">

        <title>{{ page.title }}</title>

        <!-- Respsonsive Meta Tags -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0" />

        <meta name="description" content="{{ app.description }}" />
        <meta name="robots" content="index, follow" />
        <meta name="author" content="{{ app.author }}" />

        <!-- Microsoft Windows Application Settings-->
        <meta name="application-name" content="{{ app.name }}"/>
        <meta name="msapplpication-TileColor" content="{{ color is defined ? app.theme_color : '#ffffff' }}"/>
        <meta name="theme-color" content="{{ app.theme_color is defined ? color : '#ffffff' }}" />

        <!-- Web Application Icon -->
        <link href="/resources/main/images/layout/appicon.png" rel="icon" type="image/png">

        <!-- Apple Touch Icon -->
        <link href="/resources/main/images/layout/apple-touch-icon.png" rel="apple-touch-icon">
        <link href="/resources/main/images/layout/appicon.svg" rel="mask-icon" color="#000000">

        <link rel="stylesheet" href="/resources/main/stylesheets/main.css">

        {% block head %}{% endblock %}
    </head>
    <body>
        <div class="sticky-end">
            <div class="sticky-end-body">
                {% block header %}{% endblock %}

                {% block content %}
                    No content defined.
                {% endblock %}
            </div>
            <div class="sticky-end-footer">
                {% block footer %}{% endblock %}
            </div>
        </div>
    </body>

    <script src="/resources/main/javascripts/lib/svg-sprite-injector/svg-sprite-injector.js"></script>
    <script>
        var revision = 'cached';
        svgSpriteInjector('/resources/main/images/layout/svg-sprite.svg', {
            revision: revision
        });
    </script>

    <script src="/resources/main/javascripts/lib/jquery/dist/jquery.min.js"></script>

    {% block foot %}{% endblock %}
</html>